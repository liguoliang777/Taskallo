<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm065">

    <ImageView
        android:id="@+id/tag_item_edit"
        android:layout_width="@dimen/dm080"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/dm010"
        android:scaleType="centerInside"
        android:src="@drawable/ic_me_top_edit"
        android:textColor="@color/white"
        android:textSize="@dimen/dm024" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/tag_item_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tag_item_edit"
        android:scaleType="fitXY"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@color/transparent"
        fresco:placeholderImageScaleType="fitXY"
        fresco:roundedCornerRadius="@dimen/dm005" />

    <ImageView
        android:id="@+id/tag_item_selected_bt"
        android:layout_width="@dimen/dm060"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tag_item_edit"
        android:scaleType="centerInside"
        android:src="@drawable/ic_card_confim" />

    <TextView
        android:id="@+id/tag_item_tv"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dm020"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tag_item_selected_bt"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/dm024" />
</RelativeLayout>