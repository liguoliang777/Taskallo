<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tag_add_cancel_bt"
        style="@style/px24_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dm036"
        android:text="@string/cancel" />

    <TextView
        android:id="@+id/tag_add_ok_bt"
        style="@style/px24_333333_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/dm036"
        android:text="添加" />

    <EditText
        android:id="@+id/tag_add_title_et"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm100"
        android:layout_below="@id/tag_add_cancel_bt"
        android:background="@color/white"
        android:hint="标签名称(选填)"
        android:textColorHint="@color/cccccc"
        android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

    <GridView
        android:layout_below="@id/tag_add_title_et"
        android:id="@+id/tag_add_grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:columnWidth="72dp"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        />



</RelativeLayout>