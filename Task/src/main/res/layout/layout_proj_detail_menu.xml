<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/f5f5f5"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024">

        <TextView
            android:id="@+id/proj_list_projName_tv"
            style="@style/px24_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm010"
            android:layout_centerVertical="true"
            android:text="名字" />

        <EditText
            android:id="@+id/proj_list_projName_et"
            style="@style/px24_1a1a1a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/proj_list_projName_tv"
            android:background="@null"
            android:textStyle="bold"
            android:padding="@dimen/dm020"
            android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_public_private"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm020"
        android:background="@color/white"
        android:paddingLeft="@dimen/dm024">

        <TextView
            style="@style/px24_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="可见范围" />

        <TextView
            style="@style/px20_808080"
            android:id="@+id/proj_list_public_private_tv"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dm100"
            android:clickable="true"
            android:paddingRight="@dimen/dm024"
            android:paddingBottom="@dimen/dm020"
            android:paddingTop="@dimen/dm020"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_memeber_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm001"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024">

        <TextView
            style="@style/px24_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="成员列表" />

        <TextView
            style="@style/px20_808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/proj_menu_dialog_favorite_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm001"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024">

        <TextView
            style="@style/px24_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="星标收藏" />

        <ImageView
            android:id="@+id/proj_list_menu_dialog_favorite_iv"
            style="@style/px20_808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_favorite_bt" />
    </RelativeLayout>

    <include layout="@layout/layout_line_1px_e6e6e6" />

    <TextView
        android:id="@+id/proj_list_menu_has_filed_cad_bt"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024"
        android:text="已归档卡片" />

    <TextView
        android:id="@+id/proj_list_menu_has_filed_list_bt"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm001"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024"
        android:text="已归档列表" />

    <include layout="@layout/layout_line_1px_e6e6e6" />


    <TextView
        android:id="@+id/proj_list_menu_copy_proj_bt"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024"
        android:text="复制项目" />

    <TextView
        android:id="@+id/proj_list_menu_delete_proj_bt"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm001"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024"
        android:text="删除项目" />

    <include layout="@layout/layout_line_1px_e6e6e6" />

    <TextView
        android:id="@+id/proj_list_menu_activity_bt"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024"
        android:text="活动" />

    <include layout="@layout/layout_line_1px_e6e6e6" />

    <TextView
        android:id="@+id/proj_list_menu_filed_bt"
        style="@style/px24_333333"
        android:layout_width="match_parent"
        android:layout_height="@dimen/diolg_bottom_height"
        android:layout_marginTop="@dimen/dm020"
        android:background="@drawable/selector_item_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dm024"
        android:paddingRight="@dimen/dm024"
        android:text="归档看板"
        android:textColor="@color/mainColorDrak" />

    <include layout="@layout/layout_line_1px_e6e6e6" />

    <View
        android:id="@+id/proj_list_menu_dialog_empty_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></View>
</LinearLayout>