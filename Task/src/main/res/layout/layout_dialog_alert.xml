<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dm010"
    android:paddingBottom="@dimen/dm010"
    android:background="@drawable/shape_corner8px_black"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/img_1"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/dm020"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_loading" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:layout_marginRight="@dimen/dm030"
        android:textColor="@color/white"
        android:textSize="@dimen/dm020" />

</LinearLayout>
