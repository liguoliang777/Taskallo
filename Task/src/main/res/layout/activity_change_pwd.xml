<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical">

    <com.android.taskallo.view.BaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_title_height"
        ngame:left_but_img="@drawable/ic_back"
        ngame:left_but_visable="true"
        ngame:title_size="@dimen/title_size"
        ngame:title_text="密码修改" />


    <!-- /////////////  旧密码 /////////// -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm036"
        android:background="@color/white">

        <TextView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm020"
            android:text="旧密码："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/old_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dm015"
            android:layout_toRightOf="@+id/img_1"
            android:background="@null"
            android:hint="输入旧密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/font_default"
            android:textSize="@dimen/dm028" />
    </RelativeLayout>
    <!-- /////////////  新密码 /////////// -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm010"
        android:background="@color/white">

        <TextView
            android:id="@+id/img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm020"
            android:text="新密码："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/new_pwd_et1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dm015"
            android:layout_toRightOf="@+id/img_4"
            android:background="@null"
            android:hint="输入新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/font_default"
            android:textSize="@dimen/dm028" />

    </RelativeLayout>


    <!-- /////////////  密码 /////////// -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm001"
        android:background="@color/white">

        <TextView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm020"
            android:text="请确认："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dm028" />

        <EditText
            android:id="@+id/ensure_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dm015"
            android:layout_toRightOf="@+id/img_2"
            android:background="@null"
            android:hint="再次输入新密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/font_default"
            android:textSize="@dimen/dp_16" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_find_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm070"
        android:layout_marginBottom="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dm036"
        android:layout_marginRight="@dimen/dm036"
        android:layout_marginTop="@dimen/dm036"
        android:background="@drawable/selector_register_bt"
        android:onClick="onLoginClick"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16" />

</LinearLayout>