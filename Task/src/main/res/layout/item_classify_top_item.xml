<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/discover_classify_item_size"
              android:layout_height="wrap_content"
              android:background="@drawable/selector_classify_top_bt"
              android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/classify_item_iv"
        android:layout_width="@dimen/dm044"
        android:layout_height="@dimen/dm044"
        android:layout_marginTop="@dimen/dm016"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
       />

    <TextView
        android:id="@+id/singer_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dm018"
        android:layout_marginBottom="@dimen/dm020"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/color_1a"
        android:textSize="@dimen/dm024"
        android:textStyle="bold"/>
</LinearLayout>