<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/child_imageview"
        android:layout_width="@dimen/dm084"
        android:layout_height="@dimen/dm060"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/selector_subtask_term_iv" />

    <EditText
        android:id="@+id/child_text"
        style="@style/px26_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/child_imageview"
        android:background="@null"
        android:hint=""
        android:paddingBottom="@dimen/dm020"
        android:paddingRight="@dimen/card_item_margin_left"
        android:paddingTop="@dimen/dm020"
        android:textColor="@color/color_333333"
        android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />

    <EditText
        android:id="@+id/child_add_et"
        style="@style/px26_333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/child_imageview"
        android:background="@null"
        android:hint="添加项目..."
        android:paddingBottom="@dimen/dm020"
        android:paddingRight="@dimen/card_item_margin_left"
        android:paddingTop="@dimen/dm020"
        android:textColorHint="@color/cccccc"
        android:textCursorDrawable="@drawable/shape_cursor_color_main_color" />
</RelativeLayout>