<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dm440"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dm040"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm025"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/shape_list_card_corner_top"
        android:paddingLeft="@dimen/dm020">

        <Button
            android:id="@+id/proj_list_item_menu_bt"
            android:layout_width="@dimen/dm080"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableRight="@drawable/ic_list_menu"
            android:paddingRight="@dimen/dm020" />

        <EditText
            android:id="@+id/proj_list_item_title"
            style="@style/px24_333333"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dm080"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/proj_list_item_menu_bt"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textCursorDrawable="@drawable/shape_cursor_color_main_color"
            android:gravity="center_vertical"
            android:text="标题"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_card_list_color"
        android:fastScrollEnabled="true"
        android:focusable="false"
        android:paddingLeft="@dimen/dm008"
        android:paddingRight="@dimen/dm008"
        android:scrollbarStyle="insideInset"
        android:transcriptMode="normal" />

    <Button
        android:id="@+id/item_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@drawable/shape_list_card_corner_bottom"
        android:gravity="center"
        android:text="添加卡片"
        android:textAllCaps="false"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/dm024" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@android:color/transparent" />
</LinearLayout>