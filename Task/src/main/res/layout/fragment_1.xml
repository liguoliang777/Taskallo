<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:background="@color/white"
            android:gravity="center"
            android:drawablePadding="@dimen/dm005"
            android:singleLine="true"
            android:drawableEnd="@drawable/selector_fragment_1_top_radio_button"
            android:text="@string/all_msg"
            android:textColor="@color/mainColor" />

        <android.support.v7.widget.AppCompatRadioButton
            android:drawablePadding="@dimen/dm005"
            android:background="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@null"
            android:textColor="@color/msg_top_text_seletor"
            android:drawableEnd="@drawable/selector_fragment_1_top_radio_button"
            android:text="@string/query_by_project"
            />

    </RadioGroup>


    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/sticky_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:clipToPadding="false"
        android:drawSelectorOnTop="true"
        android:fastScrollEnabled="false"
        android:listSelector="#00000000"
        android:overScrollMode="never"
        android:scrollbars="none" />
</LinearLayout>
