<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dm020"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tviv_item_iv"
        android:layout_width="@dimen/fargment0_0_iv_width"
        android:layout_height="@dimen/dm144"
        android:scaleType="centerCrop"
        fresco:actualImageScaleType="centerCrop"
        fresco:failureImage="@drawable/ic_def_logo_188_188"
        fresco:placeholderImage="@drawable/ic_def_logo_188_188"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:progressBarImage="@drawable/ic_def_logo_188_188"
        fresco:roundedCornerRadius="@dimen/dm006" />

    <TextView
        android:id="@+id/tviv_item_tv"
        android:textSize="@dimen/dm028"
        android:textColor="@color/white"
        android:layout_width="@dimen/fargment0_0_iv_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dm015"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="" />
</RelativeLayout>