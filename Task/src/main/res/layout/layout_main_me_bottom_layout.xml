<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    tools:showIn="@layout/activity_main_home"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginTop="@dimen/dm127"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dm028"
        android:paddingRight="@dimen/dm032">

        <ImageView
            android:layout_width="@dimen/dm032"
            android:layout_height="@dimen/dm032"
            android:src="@drawable/ic_tongbu" />

        <TextView
            style="@style/me_item_title_text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm040"
            android:layout_weight="1"
            android:text="@string/me_sync" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/me_top_sync_switch_bt"
            android:layout_width="wrap_content"
            android:theme="@style/me_top_item_switch_style"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dm100"
        android:layout_height="@dimen/dm002"
        android:background="@color/f0f0f0"></View>

</LinearLayout>