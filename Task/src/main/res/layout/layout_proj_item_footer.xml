<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dm480"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dm040"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm025"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:orientation="horizontal">

        <TextView
            android:clickable="true"
            android:id="@+id/proj_list_item_footer_add"
            android:layout_width="@dimen/dm440"
            android:layout_height="@dimen/dm075"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_list_add_bt"
            android:gravity="center"
            android:textSize="@dimen/dm024"
            android:text="添加列表"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/dm040"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />
    </LinearLayout>

</LinearLayout>