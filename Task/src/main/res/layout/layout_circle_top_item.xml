<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm002"
                android:background="@android:color/white"
                android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/circle_top_title_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dm020"
        android:background="@drawable/shape_corner6px_white_2abfff"
        android:padding="@dimen/dm005"
        android:text=" 置顶 "
        android:textColor="@color/mainColor"
        android:textSize="@dimen/dm016"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/circle_top_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dm020"
        android:layout_toRightOf="@id/circle_top_title_right_tv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="帖子的标题"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dm024"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm002"
        android:layout_alignParentBottom="true"
        android:background="@color/f5f5f5"/>
</RelativeLayout>