<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/main_home_title_rlay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@color/mainColor">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/fl_notifi_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm012"
            android:background="@null"
            android:clickable="true"
            android:padding="@dimen/dm020"
            android:src="@drawable/ic_add">

        </ImageButton>

        <ImageView
            android:id="@+id/im_toSearch"
            android:layout_width="@dimen/dm084"
            android:layout_height="@dimen/dm052"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dm074"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dm010"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:paddingTop="@dimen/dm010"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/main_edit_bt"
            android:layout_width="@dimen/dm084"
            android:layout_height="@dimen/dm052"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dm010"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm032"
            android:paddingTop="@dimen/dm010"
            android:scaleType="centerInside"
            android:src="@drawable/ic_me_top_edit"
            android:textSize="@dimen/dm028"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/main_hub_bt"
            android:layout_width="@dimen/dm084"
            android:layout_height="@dimen/dm052"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dm010"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm032"
            android:paddingTop="@dimen/dm010"
            android:scaleType="centerInside"
            android:src="@drawable/ic_main_hub_bt"
            android:textSize="@dimen/dm028"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_bot_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm085"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/main_tab_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <Button
                android:id="@+id/menu_video_bt"
                android:layout_width="@dimen/dm044"
                android:layout_height="@dimen/dm044"
                android:background="@drawable/seletor_main_bottom_tab_01_bt"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/main_bottom_tab_0"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dm016" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/main_tab_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="@color/white"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <Button
                android:id="@+id/menu_game_hub_bt"
                android:layout_width="@dimen/dm044"
                android:layout_height="@dimen/dm044"
                android:layout_centerHorizontal="true"
                android:background="@drawable/seletor_main_bottom_tab_02"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_notifi_num"
                android:layout_width="@dimen/dm016"
                android:layout_height="@dimen/dm016"
                android:layout_toRightOf="@id/menu_game_hub_bt"
                android:background="@drawable/shape_circle_green"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dm012"
                android:visibility="visible" />

            <TextView
                android:id="@+id/menu_gamehub_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/menu_game_hub_bt"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/main_bottom_tab_01"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dm016" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_tab_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="2dp">

            <Button
                android:id="@+id/menu_manager_bt"
                android:layout_width="@dimen/dm044"
                android:layout_height="@dimen/dm044"
                android:background="@drawable/seletor_main_bottom_tab_03"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/menu_manager_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="@string/main_bottom_tab_02"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dm016" />
        </LinearLayout>
        <!-- <LinearLayout
             android:id="@+id/main_tab_0"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_gravity="bottom"
             android:layout_weight="1"
             android:gravity="center"
             android:orientation="vertical"
             android:paddingBottom="2dp">

             <Button
                 android:id="@+id/menu_home_bt1"
                 android:layout_width="@dimen/dm044"
                 android:layout_height="@dimen/dm044"
                 android:background="@drawable/seletor_home_bottom_hot_bt"
                 android:clickable="false"
                 android:enabled="false" />

             <TextView
                 android:id="@+id/menu_home_tv"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="2dp"
                 android:layout_marginTop="2dp"
                 android:text="热门"
                 android:textColor="@color/color_333333"
                 android:textSize="@dimen/dm016" />
         </LinearLayout>-->
    </LinearLayout>


    <FrameLayout
        android:id="@+id/main_list_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bot_tab"
        android:layout_below="@id/main_home_title_rlay" />

    <RelativeLayout
        android:id="@+id/main_me_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm241"
            android:layout_marginTop="@dimen/dm084"
            android:background="@color/mainColor"></View>

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_icon_title"
            android:layout_width="@dimen/dm108"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dm108"
            android:layout_marginTop="@dimen/dm040"
            android:scaleType="fitXY"
            fresco:actualImageScaleType="fitXY"
            fresco:failureImage="@drawable/ic_user_icon_bg"
            fresco:placeholderImage="@drawable/ic_user_icon_bg"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:progressBarImage="@drawable/ic_user_icon_bg"
            fresco:roundAsCircle="true" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_icon_title"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="用戶名字"
            android:textSize="@dimen/dm032"
            android:maxLength="12"
            android:ellipsize="end"
            android:textStyle="bold"
            android:paddingTop="@dimen/dm020"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm001"
        android:layout_above="@id/ll_bot_tab"
        android:background="@color/e6e6e6" />
</RelativeLayout>
