<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:orientation="vertical">

    <Button
        android:id="@+id/item_menu_copy_bt"
        style="@style/px24_0079bf"
        android:layout_width="@dimen/dm260"
        android:layout_height="@dimen/popup_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:text="复制列表" />

    <Button
        android:id="@+id/item_menu_delete_bt"
        style="@style/px24_0079bf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:text="删除列表" />

    <Button
        style="@style/px24_0079bf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:text="移动所有卡片" />

    <Button
        style="@style/px24_0079bf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:text="@string/this_colum_to_finished_filed" />
    <Button
        style="@style/px24_0079bf"
        android:layout_width="match_parent"
        android:layout_height="@dimen/popup_height"
        android:background="@drawable/selector_item_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dm024"
        android:text="消息提醒" />
</LinearLayout>