<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_marginTop="@dimen/dm200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/img_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/ic_loading"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/load_bad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/img_4"
                android:layout_width="@dimen/dm200"
                android:layout_height="@dimen/dm200"
                android:src="@drawable/ic_no_data"/>

        </FrameLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm015"
        android:text="@string/loading"
        android:textColor="@color/color999999"/>

    <Button
        android:id="@+id/but1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dm015"
        android:background="@drawable/selector_white_but"
        android:text="@string/reload"
        android:textColor="@color/font_gray"
        android:visibility="gone"/>


</LinearLayout>