<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_left_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_corner10dp_solidwhite_strokeccc"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="品牌："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/joypad_type_name_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入品牌名称"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/cccccc"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/shape_corner10dp_solidwhite_strokeccc"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="型号："
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/joypad_type_num_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入型号"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/cccccc"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/selector_register_bt"
        android:onClick="onJoypadApplyClick"
        android:text="提交申请"
        android:textColor="@color/fefefe"
        android:textSize="@dimen/dp_16" />
</LinearLayout>