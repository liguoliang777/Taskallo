<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f5f5f5"
    android:paddingTop="5dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/bt_classic"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:background="@drawable/shape_yj_right_blue_rectangle"
                android:text="classic"
                android:textSize="12sp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/bt_slim"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/bt_classic"
                android:background="@drawable/shape_yj_left_white_rectangle"
                android:text="slim"
                android:textSize="12sp"
                android:textColor="@color/mainColor"/>

        </RelativeLayout>

        <cn.ngame.store.view.PicassoImageView
            android:id="@id/img_1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_def_logo_188_188"/>

        <cn.ngame.store.view.GameKeyListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>